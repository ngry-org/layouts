{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "layouts": {
      "root": "projects/layouts",
      "sourceRoot": "projects/layouts/src",
      "projectType": "library",
      "prefix": "l",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/layouts/tsconfig.lib.json",
            "project": "projects/layouts/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/layouts/src/test.ts",
            "tsConfig": "projects/layouts/tsconfig.spec.json",
            "karmaConfig": "projects/layouts/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/layouts/tsconfig.lib.json",
              "projects/layouts/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "mocks": {
      "root": "projects/mocks/",
      "sourceRoot": "projects/mocks/src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/mocks",
            "index": "projects/mocks/src/index.html",
            "main": "projects/mocks/src/main.ts",
            "polyfills": "projects/mocks/src/polyfills.ts",
            "tsConfig": "projects/mocks/tsconfig.app.json",
            "assets": [
              "projects/mocks/src/favicon.ico",
              "projects/mocks/src/assets"
            ],
            "styles": [
              "projects/mocks/src/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "projects/mocks/src/environments/environment.ts",
                  "with": "projects/mocks/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "mocks:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "mocks:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "mocks:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/mocks/src/test.ts",
            "polyfills": "projects/mocks/src/polyfills.ts",
            "tsConfig": "projects/mocks/tsconfig.spec.json",
            "karmaConfig": "projects/mocks/karma.conf.js",
            "styles": [
              "projects/mocks/src/styles.css"
            ],
            "scripts": [],
            "assets": [
              "projects/mocks/src/favicon.ico",
              "projects/mocks/src/assets"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/mocks/tsconfig.app.json",
              "projects/mocks/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "layouts"
}
